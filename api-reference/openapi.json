{
  "openapi": "3.0.3",
  "info": {
    "title": "Edge APIs",
    "description": "API documentation for authentication, customer, and accounts services",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://edge-gatewayapi-dev.az-sterlingapp-tcoe-dev.p.azurewebsites.net/gateway/api/v1",
      "description": "Internal test server"
    },
    {
      "url": "https://api.withedge.co/v1",
      "description": "Production server"
    },
    {
      "url": "https://api-sandbox.withedge.co/v1",
      "description": "Sandbox server"
    }
  ],
  "components":{
    "securitySchemes":{
      "basicAuth":{
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "paths": {
    "/auth/client/token": {
      "post": {
        "summary": "Token generation",
        "description": "Generate an auth token for an organisation using clientId and secretKey",
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "Successfully authenticated",
            "headers": {},
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string"
                        },
                        "tokenType": {
                          "type": "string"
                        },
                        "expiresAt": {
                          "type": "string"
                        }
                      }
                    },
                    "message": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },
                    "statusCode": {
                      "type": "string"
                    },
                    "error": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {},
            "content": {
              "application/json": {
                "examples": {
                  "Unauthenticated": {
                    "value": {
                      "error": "access_denied",
                      "error_description": "Invalid Authorization credentials"
                    }
                  }
                },
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "error_description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable",
            "headers": {},
            "content": {
              "application/json": {
                "examples": {
                  "Unauthenticated": {
                    "value": {
                      "error": "temporarily_unavailable",
                      "error_description": "Service is unavailable"
                    }
                  }
                },
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "error_description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "security": {"basicAuth": []}
    }
  }
}
